<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">
  
  <!-- Define various log targets -->
  <targets async="true">
    <!-- Log to a file with log rotation -->
    <target xsi:type="File" name="fileLogger" fileName="logs/application.log"
            layout="${longdate} | ${level:uppercase=true} | ${message} ${exception:format=toString}"
            archiveFileName="logs/archives/application.{#}.log"
            archiveAboveSize="1048576"  <!-- 1 MB -->
            archiveNumbering="Rolling"
            maxArchiveFiles="5" />
  
    <!-- Log to the console -->
    <target xsi:type="Console" name="consoleLogger"
            layout="${longdate} | ${level:uppercase=true} | ${message} ${exception:format=toString}" />
  </targets>
  
  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- All logs with level >= Info will be written to both file and console -->
    <logger name="*" minlevel="Info" writeTo="fileLogger,consoleLogger" />
  </rules>
</nlog>
